gboy.amd64:
	gcc -O3 -c globals.c -o globals.o $(CFLAGS)
	gcc -O3 -c gboy_frame.c -o gboy_frame.o $(CFLAGS)
	gcc -c amd64/gboy_cpu.S -o amd64/gboy_cpu.o $(CFLAGS)
	gcc -c gddb/gddb_main.c -o gddb/gddb_main.o $(CFLAGS)
	gcc -c gddb/gddb_funcs.c -o gddb/gddb_funcs.o $(CFLAGS)
	gcc -c gboy_parse.c -o gboy_parse.o $(CFLAGS)
	gcc -c gboy_interp.c -o gboy_interp.o $(CFLAGS)
	gcc -c gboy_cmd.c -o gboy_cmd.o $(CFLAGS)
	gcc -c main.c -o main.o $(CFLAGS)
	gcc -O3 -c gboy_sound.c -o gboy_sound.o $(CFLAGS)
	gcc -O3 -c gboy_video.c -o gboy_video.o $(CFLAGS)
	gcc -O3 -c gboy_joy.c -o gboy_joy.o $(CFLAGS)
	gcc -c gboy_vm.c -o gboy_vm.o $(CFLAGS)
	gcc -O3 -c gboy_events.c -o gboy_events.o $(CFLAGS)
	gcc -O3 -c gboy_ioctrl.c -o gboy_ioctrl.o $(CFLAGS)
	gcc  -c gboy_mbc.c -o gboy_mbc.o $(CFLAGS)
	gcc  -c gboy_mbc1.c -o gboy_mbc1.o $(CFLAGS)
	gcc  -c gboy_mbc2.c -o gboy_mbc2.o $(CFLAGS)
	gcc -O3 -c gboy_mbc3.c -o gboy_mbc3.o $(CFLAGS)
	gcc -O3 -c amd64/gboy_utils.S -o amd64/gboy_utils_low.o $(CFLAGS)
	gcc -O3 -c gboy_utils.c -o gboy_utils.o $(CFLAGS)
	gcc -O3 -c gboy_lcd.c -o gboy_lcd.o $(CFLAGS)
	gcc -O3 -lSDL -lc gboy_frame.o globals.o gddb/gddb_funcs.o gddb/gddb_main.o main.o gboy_parse.o gboy_interp.o gboy_cmd.o gboy_sound.o gboy_video.o gboy_joy.o gboy_vm.o gboy_events.o amd64/gboy_cpu.o gboy_ioctrl.o gboy_mbc.o gboy_mbc1.o gboy_mbc2.o gboy_mbc3.o gboy_utils.o amd64/gboy_utils_low.o gboy_lcd.o -o gboy $(CFLAGS) $(LDFLAGS)

clean:
	rm *.o gboy *~ i386/*.o i386/gboy i386/*~ amd64/*.o amd64/gboy amd64/*~ gddb/*.o gddb/gboy gddb/*~
